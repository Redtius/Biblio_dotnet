@model Livre

@{
    ViewBag.Title = "Ajouter un Livre";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>➕ Ajouter un Livre</h1>

<form method="post" action="~/Livre/Create">
    <div class="form-group">
        <label>Titre</label>
        <input type="text" name="Titre" class="form-control" required />
    </div>
    <div class="form-group mt-3">
        <label>Auteur</label>
        <input type="text" name="Auteur" class="form-control" required />
    </div>
    <div class="form-group mt-3">
        <label>Genre</label>
        <input type="text" name="Genre" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label>Éditeur</label>
        <input type="text" name="Editeur" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label>Année de Publication</label>
        <input type="number" name="AnneePublication" class="form-control" />
    </div>
    <div class="form-group mt-3">
        <label>Copies Disponibles</label>
        <input type="number" name="CopiesDisponibles" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">✅ Ajouter</button>
    <a href="~/Livre/Index" class="btn btn-secondary mt-3">❌ Annuler</a>
</form>
