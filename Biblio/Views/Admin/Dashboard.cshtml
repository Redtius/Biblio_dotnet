@{
    ViewBag.Title = "Tableau de Bord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>📊 Tableau de Bord Administratif</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card text-white bg-primary mb-3">
            <div class="card-body">
                <h5 class="card-title">📚 Nombre Total de Livres</h5>
                <p class="card-text">@ViewBag.TotalLivres</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-success mb-3">
            <div class="card-body">
                <h5 class="card-title">🧑‍🎓 Nombre d'Utilisateurs</h5>
                <p class="card-text">@ViewBag.TotalUtilisateurs</p>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card text-white bg-warning mb-3">
            <div class="card-body">
                <h5 class="card-title">🔄 Emprunts en Cours</h5>
                <p class="card-text">@ViewBag.EmpruntsEnCours</p>
            </div>
        </div>
    </div>
</div>
